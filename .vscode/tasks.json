{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build All (Linux Debug)",
			"type": "shell",
			"command": "make",
			"args": ["-j$(nproc)"],
			"options": {
				"cwd": "${workspaceFolder}/build-linux-debug"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always"
			}
		},
		{
			"label": "Build All (Linux Release)",
			"type": "shell",
			"command": "make",
			"args": ["-j$(nproc)"],
			"options": {
				"cwd": "${workspaceFolder}/build-linux-release"
			},
			"group": {
				"kind": "build"
			},
			"presentation": {
				"reveal": "always"
			}
		}
	]
}
